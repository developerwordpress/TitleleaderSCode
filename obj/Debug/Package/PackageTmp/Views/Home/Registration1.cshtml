@model TitleLeader.Models.UserRegistrationModels.UserMaster

@{
    Layout = "~/Views/Home/Registration.cshtml";
}

@using (Html.BeginForm("Registration1", "Home", FormMethod.Post, new { @autocomplete = "off" }))
{
    @Html.AntiForgeryToken()
    <div class="register-right-section">
        <p class="blue-text">Step 1 of 2</p>
        <p class="info-text">Enter your information</p>
        <div class="row">
            <div class="col-xs-6">
                @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control", @placeholder = "First Name", @required = "required" })
                @Html.ValidationMessageFor(m => m.Firstname)
            </div>
            <div class="col-xs-6">
                @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control", @placeholder = "Last Name", @required = "required" })
                @Html.ValidationMessageFor(m => m.Lastname)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @placeholder = "Company Name", @required = "required" })
                @Html.ValidationMessageFor(m => m.CompanyName)
            </div>
            <div class="col-xs-6">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Phone", @required = "required" })
                @Html.ValidationMessageFor(m => m.PhoneNumber)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @required = "required" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="col-xs-6">
                @Html.TextBoxFor(m => m.ConfirmEmail, new { @class = "form-control", @placeholder = "Confirm Email", @required = "required" })
                @Html.ValidationMessageFor(m => m.ConfirmEmail)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Address", @required = "required" })
                @Html.ValidationMessageFor(m => m.Address)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control", @placeholder = "City", @required = "required" })
                @Html.ValidationMessageFor(m => m.City)
            </div>
            <div class="col-xs-3">
                @Html.DropDownListFor(m => m.StateId, (IEnumerable<SelectListItem>)ViewBag.States, "Select State", new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(m => m.StateId)
            </div>
            <div class="col-xs-3">
                @Html.TextBoxFor(m => m.Zip, new { @class = "form-control zip-code", @placeholder = "Zip" })
                @Html.ValidationMessageFor(m => m.Zip)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Username", @required = "required" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @required = "required" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="col-xs-6">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", @required = "required" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.BulkOrderTalk)I would like to talk to an account representative about <a href="@Url.Action("BulkOrderDiscounts","Home")" target="_blank"> Bulk Order Discounts</a>
                    </label>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.TermsCondition, new { @required = "required" })I agree to the <a href="@Url.Action("Termsandcondition","Home")" target="_blank" >Terms & Conditions</a>
                        @Html.ValidationMessageFor(m => m.TermsCondition)
                    </label>
                </div>
            </div>
        </div>
        <div class="sign-btn-box">
            <button type="submit" id="btn-next" class="login-btn">Next Step </button>
            <span>Step 1 or 2 </span>
        </div>
        <p class="bottom-line-text">By logging in you agree to our <a href="@Url.Action("Termsandcondition","Home")" target="_blank">privacy policy & term of service</a> | @@ 2018 Title Leader <p>
    </div>
}

@section footer
{
    <script src="~/Content/jquery-mask/jquery.mask.js"></script>
    <script>
        $(document).ready(function () {
            $('#PhoneNumber').mask('0000000000');
            $('.zip-code').mask('00000');
        });
    </script>
}


