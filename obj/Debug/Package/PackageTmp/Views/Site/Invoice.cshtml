                        list += '<li class="list-group-item"><a target="_blank" href="http://app.titleleader.com/titlesearchexample.pdf">Order_' + orderno + '.pdf</a></li>';
                        list += '</ul>';

                        $("#myModal1").find('.modal-body').html(list);
                        $("#myModal1").modal("show");
                    }
                });
            })



        });
